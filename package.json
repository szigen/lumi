{
  "name": "lumi-app",
  "version": "0.1.5",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "dev:linux": "ELECTRON_DISABLE_SANDBOX=1 electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "build:mac": "electron-vite build && electron-builder --mac --config electron-builder.config.ts --publish never",
    "build:win": "electron-vite build && electron-builder --win --config electron-builder.config.ts --publish never",
    "build:linux": "electron-vite build && electron-builder --linux --config electron-builder.config.ts --publish never",
    "build:all": "electron-vite build && electron-builder --mac --win --linux --config electron-builder.config.ts --publish never"
  },
  "keywords": [
    "claude",
    "claude-code",
    "ai",
    "orchestrator",
    "electron",
    "terminal",
    "dashboard"
  ],
  "author": {
    "name": "Sezgin Sazliogullari",
    "email": "sezginsazlioglu@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/szigen/lumi",
  "bugs": {
    "url": "https://github.com/szigen/lumi/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/szigen/lumi.git"
  },
  "description": "Desktop dashboard for managing multiple AI coding CLI sessions",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@monaco-editor/react": "^4.7.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-unicode11": "^0.9.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^6.0.0",
    "autoprefixer": "^10.4.24",
    "electron": "^40.1.0",
    "electron-builder": "^26.0.0",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "framer-motion": "^12.31.0",
    "globals": "^17.3.0",
    "lucide-react": "^0.566.0",
    "postcss": "^8.5.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "zustand": "^5.0.11"
  },
  "dependencies": {
    "ignore": "^7.0.5",
    "js-yaml": "^4.1.1",
    "node-pty": "^1.1.0",
    "simple-git": "^3.30.0",
    "uuid": "^13.0.0"
  }
}
